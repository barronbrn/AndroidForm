<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:gravity="center"/>

        <!-- Nama -->
        <TextView
            android:text="@string/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/etNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan nama lengkap"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:layout_marginBottom="12dp"/>

        <!-- NIM -->
        <TextView
            android:text="@string/nim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/etNim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan NIM"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:layout_marginBottom="12dp"/>

        <!-- Spinner reusable layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/semester"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <Spinner
                android:id="@+id/spinnerSemester"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Device coding -->
        <TextView
            android:text="@string/device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <Spinner
            android:id="@+id/spinnerDevice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"/>

        <!-- OS Device -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/device_os"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <Spinner
            android:id="@+id/spinnerOs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"/>

        <!-- Versi OS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/versi_os"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/etVersiOs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contoh: Windows 11 64-bit"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:layout_marginBottom="12dp"/>

        <!-- RAM -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ram"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/etRam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contoh: 8 GB"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:layout_marginBottom="12dp"/>

        <!-- CPU -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cpu"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/etCpu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contoh: Intel i5 / Ryzen 7"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:layout_marginBottom="12dp"/>

        <!-- Deployment -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deployment"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <Spinner
            android:id="@+id/spinnerDeployment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"/>

        <!-- Merk HP -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/merk_hp"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/etMerkHp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contoh: Xiaomi, Samsung"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:layout_marginBottom="12dp"/>

        <!-- OS HP -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/os_hp_detail"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/etOsHpDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contoh: Android 12"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:layout_marginBottom="12dp"/>

        <!-- Ukuran HP -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ukuran_hp"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/etUkuranHp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contoh: 6.5 inch"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:layout_marginBottom="12dp"/>

        <!-- Penggunaan Internet -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/penggunaan_internet"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <Spinner
            android:id="@+id/spinnerInternet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"/>

        <!-- Instalasi Android Studio -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/instalasi_android_studio"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <RadioGroup
            android:id="@+id/rgInstalasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <RadioButton
                android:id="@+id/rbSudah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sudah_install" />

            <RadioButton
                android:id="@+id/rbBelum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/belum_install"
                android:layout_marginStart="20dp"/>
        </RadioGroup>

        <!-- Versi Android Studio -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/versi_android_studio"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/etVersiAs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contoh: Meerkat 2024.3.1"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:layout_marginBottom="16dp"/>

        <!-- Tombol Submit -->
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_submit"
            android:textAllCaps="false"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:textColor="@android:color/white"
            android:padding="12dp" />
    </LinearLayout>

</ScrollView>